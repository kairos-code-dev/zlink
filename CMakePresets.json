{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "windows-x64",
            "displayName": "Windows x64 (VS2022, Release, Tests ON)",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "binaryDir": "${sourceDir}/core/build/windows-x64",
            "cacheVariables": {
                "BUILD_TESTS": "ON",
                "ZLINK_BUILD_TESTS": "ON",
                "BUILD_BENCHMARKS": "OFF",
                "ZLINK_CXX_STANDARD": "17",
                "OPENSSL_ROOT_DIR": "${sourceDir}/core/deps/vcpkg/installed/x64-windows-static",
                "CMAKE_PREFIX_PATH": "${sourceDir}/core/deps/vcpkg/installed/x64-windows-static"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-x64-release",
            "displayName": "Build Release (windows-x64)",
            "configurePreset": "windows-x64",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "windows-x64-test",
            "displayName": "CTest Release (windows-x64-test)",
            "configurePreset": "windows-x64",
            "configuration": "Release",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "windows-x64-release",
            "displayName": "CTest Release (windows-x64, legacy)",
            "configurePreset": "windows-x64",
            "configuration": "Release",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
